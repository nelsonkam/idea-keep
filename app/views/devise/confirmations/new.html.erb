<div class="min-h-screen bg-purple flex justify-center items-center">
  <div class="bg-white w-full shadow-md rounded-lg p-4 mx-4" style="max-width: 360px;">
    <p class="text-2xl text-center font-bold text-black mb-3">Resend confirmation instructions</p>
    <%= form_for(resource, html: { class: "flex flex-col text-grey", method: :post }, as: resource_name, url: confirmation_path(resource_name)) do |f| %>
      <%= f.label :email, class: "text-grey mb-2" %>
      <%= f.email_field :email, placeholder: "clark@kent.co", class: "appearance-none border-2 border-grey rounded p-2", autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
      <% unless resource.errors.messages[:email].empty? %>
        <p class="text-sm mb-2 mt-1 text-red">Email address <%= resource.errors.messages[:email][0] %></p>
      <% else %>
        <div class="mb-3"></div>
      <% end %>
      <%= f.submit "Resend confirmation instructions", class: "bg-purple p-2 py-3 mt-3 font-bold rounded-full text-white text-center" %>
    <% end %>
    <div class="w-full flex flex-col mt-1">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
