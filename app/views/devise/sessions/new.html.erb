<div class="min-h-screen bg-purple flex justify-center items-center">
  <div class="bg-white w-full shadow-md rounded-lg p-4 mx-4" style="max-width: 360px;">
    <p class="text-2xl text-center font-bold text-black mb-3">Log In</p>
    <%= form_for(resource, html: { class: "flex flex-col text-grey" }, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.label :email, class: "text-grey mb-2" %>
      <%= f.email_field :email, placeholder: "clark@kent.co", class: "appearance-none border-2 border-grey rounded p-2", autocomplete: "email" %>
      <% unless resource.errors.messages[:email].empty? %>
        <p class="text-sm mb-2 mt-1 text-red">Email address <%= resource.errors.messages[:email][0] %></p>
      <% else %>
        <div class="mb-3"></div>
      <% end %>
      <%= f.label :password, class: "text-grey mb-2" %>
      <%= f.password_field :password, placeholder: "#{minimum_password_length ? minimum_password_length.to_s + ' characters minimum' : '' }", class: "appearance-none border-2 border-grey rounded p-2", autocomplete: "off" %>
      <% unless resource.errors.messages[:password].empty? %>
        <p class="text-sm mb-2 mt-1 text-red">Password <%= resource.errors.messages[:password][0] %></p>
      <% else %>
        <div class="mb-3"></div>
      <% end %>
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
      <%= f.submit "Get me back in!", class: "bg-purple p-2 py-3 mt-3 font-bold rounded-full text-white text-center" %>
    <% end %>
    <div class="w-full flex flex-col mt-1">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>